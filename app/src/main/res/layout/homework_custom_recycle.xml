<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">


            <TextView
                android:id="@+id/homework_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shapeaccentcircle"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homework_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/homework_id"
                android:maxLines="2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="This is a simple notification of Doon school. we are the leading school of India."
                android:textSize="17sp" />

            <TextView
                android:id="@+id/homework_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/homework_des"
                android:layout_below="@+id/homework_des"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:text="From: Jites" />

            <TextView
                android:id="@+id/homework_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/homework_teacher"
                android:layout_below="@+id/homework_teacher"
                android:text="23 May 2018"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/download_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/homework_teacher"
                android:layout_marginEnd="13dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/ic_file_download_black_24dp"
                android:visibility="invisible" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>