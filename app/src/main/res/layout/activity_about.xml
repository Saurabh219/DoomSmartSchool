<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="notification.push.com.smartschool.Activity.About">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/login_indication"
                android:textColor="#FFFF"
                android:textSize="17sp"
                android:text="Developed and Designed By"
                />

        </FrameLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/marina" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="22dp"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:text="Marina Technologies is a IT firm based in Kashmir which provides Website Design and other IT services. Marina Technologies website development company in Srinagar has made its best effect in the field of web Design not only in Kashmir but around the world" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:text="Follow Us"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/facebook"
        android:focusable="true"
        android:gravity="center"
        android:text="Facebook"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/facebook"
        android:layout_below="@+id/facebook"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/twitter"
        android:focusable="true"
        android:gravity="center"
        android:text="Twitter"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/twitter"
        android:layout_below="@+id/twitter"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/googleplus"
        android:focusable="true"
        android:gravity="center"
        android:text="Google Plus"
        android:textSize="20sp" />
</RelativeLayout>
